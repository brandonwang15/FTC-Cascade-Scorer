        <item name="android:actionBarItemBackground">@drawable/selectable_background_cascade</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Cascade</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Cascade</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Cascade</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Cascade</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Cascade</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_cascade</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_cascade</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Cascade</item>

        <!--
        Colored Component Styles using tools..:
        
		Created by Jérôme Van Der Linden.
		Built upon the android-ui-utils asset studio framework created by Roman Nurik, copyright Google Inc.
		All generated art is licensed under a Creative Commons Attribution 3.0 Unported License.
		- See more at: http://android-holo-colors.com/#sthash.mK8iLElQ.dpuf
        -->
        <item name="android:buttonStyle">@style/Buttoncascade</item>
        <item name="android:buttonStyleSmall">@style/ButtoncascadeSmall</item>
        <item name="android:imageButtonStyle">@style/ImageButtoncascade</item>
    </style>



    
    <!-- Rest of styles for Action bar ect. -->
    <style name="ActionBar.Solid.Cascade" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_background_textured_cascade</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_cascade</item>
        <item name="android:backgroundSplit">@drawable/ab_background_textured_cascade</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Cascade</item>
    </style>

    <style name="ActionBar.Transparent.Cascade" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_cascade</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Cascade</item>
    </style>

    <style name="PopupMenu.Cascade" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_cascade</item>
    </style>

    <style name="DropDownListView.Cascade" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_cascade</item>
    </style>

    <style name="ActionBarTabStyle.Cascade" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_cascade</item>
    </style>

    <style name="DropDownNav.Cascade" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_cascade</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_cascade</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_cascade</item>
    </style>

    <style name="ProgressBar.Cascade" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_cascade</item>
    </style>

    <style name="ActionButton.CloseMode.Cascade" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_cascade</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Cascade.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Cascade</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Cascade</item>
    </style>

</resources>